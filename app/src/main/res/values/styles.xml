<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:color">@color/colorPrimaryDark</item>

    </style>
    <style name="MainActivityTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:color">@color/colorPrimaryDark</item>
    </style>

    <style name="ButtonStyle">
        <item type="dimen" name="android:layout_marginLeft">32dp</item>
        <item type="dimen" name="android:layout_marginRight">32dp</item>
        <item type="" name="android:background">@drawable/button_shape</item>
    </style>

    <style name="AppToolbarStyle" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:color">@android:color/white</item>
    </style>
</resources>
