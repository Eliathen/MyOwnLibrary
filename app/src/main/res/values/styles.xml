<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:color">@color/colorPrimaryDark</item>
    </style>

    <style name="LoginViewButtonStyle">
        <item type="dimen" name="android:layout_marginLeft">32dp</item>
        <item type="dimen" name="android:layout_marginRight">32dp</item>
        <item type="" name="android:background">@color/colorAccent</item>
    </style>

    <style name="AppToolbarStyle" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:color">@android:color/white</item>
    </style>
</resources>
